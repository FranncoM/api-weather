{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["google", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi":true,
        "trailingComma": "es5",
        "tabWidth": 2,
        "singleQuote": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "require-jsdoc": 0,
    "object-curly-spacing": ["error", "always"],
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "comma-dangle": ["error", "only-multiline"]
  }
}
